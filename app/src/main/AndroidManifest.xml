<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nazeer.myapplication" >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".simpleAnimationActivity" >
        </activity>
        <activity
            android:name=".ExampleActivityTransition"
            android:label="@string/title_activity_activity_transition1"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ExampleTransitionActivity2"
            android:theme="@style/Transparent" >
        </activity>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
